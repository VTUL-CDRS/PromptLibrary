// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
  previewFeatures = ["fullTextSearch"]
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

// Relations
//---------------------------------------------
// Prisma supports JSON objects if we want to use that
model Prompt {
  id         Int       @id @default(autoincrement())
  prompt     String
  response   String
  image      String
  rating     Float
  approved   Boolean
  llmName    String
  createdAt  DateTime     @updatedAt
  hasTag     HasTag[]
  llm        LLM          @relation(fields: [llmName], references: [llmName])
}

model Account {
  id          String       @id @default(uuid())
  isModerator Boolean
}

model Tag {
  name   String   @id
  HasTag HasTag[]
}

model LLM {
  llmName String   @id
  Prompt  Prompt[]
}

model HasTag {
  tagName  String @id
  promptID Int
  prompt   Prompt @relation(fields: [promptID], references: [id]) // 1-Many
  tag      Tag    @relation(fields: [tagName], references: [name]) // 1-Many
}