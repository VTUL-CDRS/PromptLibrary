// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider        = "prisma-client-js"
  previewFeatures = ["fullTextSearch"]
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

// Relations
//---------------------------------------------
// Prisma supports JSON objects if we want to use that
model Prompt {
  id        Int      @id @default(autoincrement())
  prompt    String
  response  String
  image     String
  rating    Float
  approved  Boolean
  llmName   String
  createdAt DateTime @updatedAt
  summary   String
  title     String   @db.VarChar(50)
  hasTag    HasTag[]
  llm       LLM      @relation(fields: [llmName], references: [llmName])
}

model Account {
  id          Int     @id @default(autoincrement())
  isModerator Boolean
}

model Tag {
  name   String   @id
  hasTag HasTag[]
}

model LLM {
  llmName String   @id
  Prompt  Prompt[]
}

model HasTag {
  promptId Int
  prompt   Prompt @relation(fields: [promptId], references: [id]) // 1-Many

  tagId String
  tag   Tag    @relation(fields: [tagId], references: [name]) // 1-Many

  @@id([promptId, tagId])
}
